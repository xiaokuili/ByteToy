generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




model Metadata {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  type         String
  displayName  String
  host         String
  port         Int
  databaseName String
  username     String
  password     String
  schemas      Json     // 存储 'All' 或 string[]
  useSSL       Boolean  @default(true)
}